<%= form_for @update do |f| %>
  <% if @update.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@update.errors.count, "error") %> prohibited this update from being saved:
      </h2>

      <ul>
      <% @update.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </div>

  <div class="form-group">
    <%= f.label "Beneficiary" %>
    <br>
    <%= f.collection_select :beneficiary_id, Beneficiary.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.text_area :notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Complete" %>
    <br>
    <%= f.check_box :complete %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
