<% if @beneficiary.present? %>
  <h2>Updates for <%= @beneficiary.name %></h2>
<% else %>
  <h2> All Updates </h2>
<% end %>

<% @updates.each do |update| %>
<p> Date: <%= update.formatted_date %> Note: <%= update.notes %> Complete: <%= check_box_tag :complete, 1, update.complete %>
  <%= link_to "Edit Note", edit_update_path(update) %></p>
<% end %>

<%= link_to "Create New Note", new_update_path %><br>
<%= link_to "View Late Update Report", reports_late_updates_path %>
